<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRnBarcodeScanner.Views.MenuPage"
             Title="Menu"
             BackgroundColor="#525252">
    <StackLayout VerticalOptions="FillAndExpand">
        <Label Text="Main Menu" TextColor="White"></Label>
        <ListView x:Name="ListViewMenu"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate >
                    <ViewCell>
                        <Grid Padding="10">
                            <Label 
                                Text="{Binding Title}" 
                                TextColor="White" 
                                FontSize="Large"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>